<%- include("header.ejs") %>


<form action="/updatePost" method="post">

    <div class="container">
        <div class="row">
            <div class="col-auto mb-3">
            </div>
            <div class="col mb-3">
                <label for="blog-title" class="form-label">Title</label>
                <input type="text" name="title" id="blog-title" class="form-control" placeholder="Enter blog title here" value="<%= post.title %>" required>
            </div>
        </div>
        <div class="row">
            <div class="col-auto mb-3">
            </div>
            <div class="col mb-3">
                <label for="blog-text" class="form-label">Body</label>
                <!-- <input type="text" name="text" id="blog-text" > -->
                <textarea class="form-control" id="blog-text" rows="3" name="text" placeholder="Enter blog text/body here" required><%= post.body %></textarea>
            </div>
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-outline-success">Submit</a></button>
        </div>
        
    </div>
    
    
    <!-- <textarea name="text" id="blog-text" cols="30" rows="10"></textarea> -->
</form>



